<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.williamcomartin.plexpyremote.LibraryDetailsFragments.LibraryDetailsProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Global Stats -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                card_view:cardBackgroundColor="@color/colorCardBackground"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <com.joanzapata.iconify.widget.IconTextView
                        android:id="@+id/library_details_profile_global_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="{fa-line-chart} Global Stats"
                        android:textAppearance="@style/Headline" />

                    <LinearLayout
                        android:layout_below="@+id/library_details_profile_global_title"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/Subhead"
                                    android:textAlignment="center"
                                    android:text="Last 24 Hours"/>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                    <TextView
                                        android:id="@+id/library_details_profile_global_24hours_plays"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:textAppearance="@style/Subhead"
                                        android:textColor="@color/colorAccent"
                                        android:text="0"/>

                                    <TextView
                                        android:id="@+id/library_details_profile_global_24hours_plays_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@+id/library_details_profile_global_24hours_plays"
                                        android:layout_toEndOf="@+id/library_details_profile_global_24hours_plays"
                                        android:textSize="10sp"
                                        android:text="plays"/>

                                    <TextView
                                        android:id="@+id/library_details_profile_global_24hours_slash"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="3dp"
                                        android:layout_toEndOf="@+id/library_details_profile_global_24hours_plays_label"
                                        android:textAppearance="@style/Subhead"
                                        android:text="/"/>

                                    <TextView
                                        android:id="@+id/library_details_profile_global_24hours_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_toEndOf="@+id/library_details_profile_global_24hours_slash"
                                        android:textAppearance="@style/Subhead"
                                        android:textColor="@color/colorAccent"
                                        android:text="0"/>

                                    <TextView
                                        android:id="@+id/library_details_profile_global_24hours_time_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@+id/library_details_profile_global_24hours_time"
                                        android:layout_toEndOf="@+id/library_details_profile_global_24hours_time"
                                        android:textSize="10sp"
                                        android:text="mins"/>

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/Subhead"
                                    android:textAlignment="center"
                                    android:text="Last 7 Days"/>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                    <TextView
                                        android:id="@+id/library_details_profile_global_7days_plays"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:textAppearance="@style/Subhead"
                                        android:textColor="@color/colorAccent"
                                        android:text="0"/>

                                    <TextView
                                        android:id="@+id/library_details_profile_global_7days_plays_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@+id/library_details_profile_global_7days_plays"
                                        android:layout_toEndOf="@+id/library_details_profile_global_7days_plays"
                                        android:textSize="10sp"
                                        android:text="plays"/>

                                    <TextView
                                        android:id="@+id/library_details_profile_global_7days_slash"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="3dp"
                                        android:layout_toEndOf="@+id/library_details_profile_global_7days_plays_label"
                                        android:textAppearance="@style/Subhead"
                                        android:text="/"/>

                                    <TextView
                                        android:id="@+id/library_details_profile_global_7days_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_toEndOf="@+id/library_details_profile_global_7days_slash"
                                        android:textAppearance="@style/Subhead"
                                        android:textColor="@color/colorAccent"
                                        android:text="0"/>

                                    <TextView
                                        android:id="@+id/library_details_profile_global_7days_time_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@+id/library_details_profile_global_7days_time"
                                        android:layout_toEndOf="@+id/library_details_profile_global_7days_time"
                                        android:textSize="10sp"
                                        android:text="mins"/>

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/Subhead"
                                    android:textAlignment="center"
                                    android:text="Last 30 Days"/>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                    <TextView
                                        android:id="@+id/library_details_profile_global_30days_plays"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:textAppearance="@style/Subhead"
                                        android:textColor="@color/colorAccent"
                                        android:text="0"/>

                                    <TextView
                                        android:id="@+id/library_details_profile_global_30days_plays_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@+id/library_details_profile_global_30days_plays"
                                        android:layout_toEndOf="@+id/library_details_profile_global_30days_plays"
                                        android:textSize="10sp"
                                        android:text="plays"/>

                                    <TextView
                                        android:id="@+id/library_details_profile_global_30days_slash"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="3dp"
                                        android:layout_toEndOf="@+id/library_details_profile_global_30days_plays_label"
                                        android:textAppearance="@style/Subhead"
                                        android:text="/"/>

                                    <TextView
                                        android:id="@+id/library_details_profile_global_30days_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_toEndOf="@+id/library_details_profile_global_30days_slash"
                                        android:textAppearance="@style/Subhead"
                                        android:textColor="@color/colorAccent"
                                        android:text="0"/>

                                    <TextView
                                        android:id="@+id/library_details_profile_global_30days_time_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@+id/library_details_profile_global_30days_time"
                                        android:layout_toEndOf="@+id/library_details_profile_global_30days_time"
                                        android:textSize="10sp"
                                        android:text="mins"/>

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/Subhead"
                                    android:textAlignment="center"
                                    android:text="All Time"/>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">

                                    <TextView
                                        android:id="@+id/library_details_profile_global_alltime_plays"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:textAppearance="@style/Subhead"
                                        android:textColor="@color/colorAccent"
                                        android:text="0"/>

                                    <TextView
                                        android:id="@+id/library_details_profile_global_alltime_plays_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@+id/library_details_profile_global_alltime_plays"
                                        android:layout_toEndOf="@+id/library_details_profile_global_alltime_plays"
                                        android:textSize="10sp"
                                        android:text="plays"/>

                                    <TextView
                                        android:id="@+id/library_details_profile_global_alltime_slash"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="3dp"
                                        android:layout_toEndOf="@+id/library_details_profile_global_alltime_plays_label"
                                        android:textAppearance="@style/Subhead"
                                        android:text="/"/>

                                    <TextView
                                        android:id="@+id/library_details_profile_global_alltime_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="3dp"
                                        android:layout_marginEnd="3dp"
                                        android:layout_toEndOf="@+id/library_details_profile_global_alltime_slash"
                                        android:textAppearance="@style/Subhead"
                                        android:textColor="@color/colorAccent"
                                        android:text="0"/>

                                    <TextView
                                        android:id="@+id/library_details_profile_global_alltime_time_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBaseline="@+id/library_details_profile_global_alltime_time"
                                        android:layout_toEndOf="@+id/library_details_profile_global_alltime_time"
                                        android:textSize="10sp"
                                        android:text="mins"/>

                                </RelativeLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <!-- User Stats -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                card_view:cardBackgroundColor="@color/colorCardBackground"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <com.joanzapata.iconify.widget.IconTextView
                        android:id="@+id/library_details_profile_user_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="{fa-users} User Stats (Top 6)"
                        android:textAppearance="@style/Headline" />

                    <GridView
                        android:id="@+id/library_details_profile_user_grid"
                        android:layout_width="match_parent"
                        android:layout_height="85dp"
                        android:layout_below="@+id/library_details_profile_user_title"
                        android:layout_marginTop="10dp"
                        android:verticalSpacing="10dp"
                        android:horizontalSpacing="5dp"
                        android:numColumns="3"
                        android:stretchMode="columnWidth"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <!-- Recently Played -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                card_view:cardBackgroundColor="@color/colorCardBackground"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="{fa-history} Recently Played"
                        android:textAppearance="@style/Headline" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <!-- Recently Added -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                card_view:cardBackgroundColor="@color/colorCardBackground"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="{fa-history} Recently Added"
                        android:textAppearance="@style/Headline" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
